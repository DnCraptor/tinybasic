100 PRINT "A GAME OF ROCK, SCISSORS, PAPER"
110 INPUT "HOW MANY GAMES? ";Q
120 IF Q<0 THEN 110
200 FOR G=1 TO Q
210 PRINT "GAME NUMBER ";G
