420 IF X>K THEN 470
430 IF X=1 THEN 450
440 PRINT "YOU WIN!!!":H=H+1: CONT
450 IF K<>3 THEN 440
460 PRINT "WOW!  I WIN!!!":C=C+1: CONT
470 IF K<>1 OR X<>3 THEN 460
480 GOTO 440
490 NEXT G
