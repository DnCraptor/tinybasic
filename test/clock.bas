5 REM "The small clock"
10 S=0
20 CLS: PUT &2,27,"f"
30 GOSUB 1000
40 GET &2,A
50 IF A=10 GOSUB 200
60 DELAY 500
100 GOTO 30
200 REM "The select code"
210 S=(S+1)%3
220 @X=14: @Y=0
230 ON S+1 GOSUB 300,400,500
290 RETURN
300 REM "Simply display"
310 PUT &2," "
390 RETURN
400 REM "Set time and date"
410 PUT &2,"S"
420 GOSUB 600
490 RETURN
500 REM "Set Alarm"
510 PUT &2,"A"
590 RETURN
600 REM "Set the time"
610 @X=0: @Y=0
620 PUT &2,27,"e"
630 T=2
640 GET &2,A
650 IF A=10 THEN PUT &2,27,"f": RETURN
660 IF A="3" THEN @T(T)=@T(T)+1:  GOSUB 1000
670 IF A="4" THEN @T(T)=@T(T)-1:  GOSUB 1000
680 IF A="1" AND T<2 THEN T=T+1
690 IF A="2" AND T>0 THEN T=T-1
700 @X=(2-T)*3
710 GOTO 640
1000 REM "Redraw the display"
1010 PUT &2,27,"H": PRINT &2,@T$(1,8);"  ";
1020 RETURN
